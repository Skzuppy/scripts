local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local Window = Fluent:CreateWindow({
    Title = "Forge Hub- Slap Battles",
    SubTitle = "by Skuppy",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true, 
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.LeftControl
})
Fluent:Notify({
    Title = "Notification",
    Content = "We have switched to Fluent.",
    Duration = 3
})

local Tabs = {
    Main = Window:AddTab({ Title = "Main", Icon = "sword" }),
    Antifling = Window:AddTab({ Title = "AntiFling", Icon = "wind" }),
    Antivoid = Window:AddTab({ Title = "Anti Void", Icon = "running" }),
    Misc = Window:AddTab({ Title = "Misc", Icon = "hammer" }),
    Changelog = Window:AddTab({ Title = "Changelog", Icon = "clipboard" })
}

--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

local Toggle = Tabs.Main:AddToggle("SlapAura", 
{
    Title = "Slap Aura", 
    Description = "Attacks people around you automatically",
    Default = false,
    Callback = function(Value)
        if Value then
            slapaura = true
        else
            slapaura = false
        end
    end 
})

local Slider = Tabs.Main:AddSlider("AttackRange", 
{
    Title = "Attack Range",
    Description = "How far away the player should be before slapping",
    Default = 15,
    Min = 1,
    Max = 40,
    Rounding = 1,
    Callback = function(Value)
        slapaurarange = Value
    end
})
local Toggle = Tabs.Main:AddToggle("IgnoreReverse", 
{
    Title = "Ignore Reverse", 
    Description = "Ignores people if they activate Reverse glove.",
    Default = false,
    Callback = function(Value)
        ignoreRetard = Value
    end 
})
local Toggle = Tabs.Main:AddToggle("ShowRange", 
{
    Title = "Show Range", 
    Description = "Shows your attack range visually",
    Default = false
    Callback = function(Value)
        visualizertoggle = Value
    end 
})
local Slider = Tabs.Main:AddSlider("AuraCooldown", 
{
    Title = "Aura Cooldown",
    Description = "",
    Default = 0.5,
    Min = 0,
    Max = 2,
    Rounding = 0.01,
    Callback = function(Value)
        auracooldown = Value
    end
})
Tabs.Main:AddParagraph({
    Title = "Warning",
    Content = "!! HITTING MULTIPLE PEOPLE AT ONCE MULTIPLE TIMES MIGHT KICK YOU !! Setting aura cooldown too low, hitting too many people at once repeatedly may get you kicked from the game. This is just a kick and not a ban. Recommended to keep aura cooldown at 0.45 (for best results) unless you know what you are doing"
})
------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
local Toggle = Tabs.Antifling:AddToggle("AntiFling", 
{
    Title = "Godmode", 
    Description = "Complete Godmode. Use method 2 if it does not work and report it in the Discord. Avoids insta-kill gloves.",
    Default = false
    Callback = function(Value)
        antifling = Value
    end 
})
local Toggle = Tabs.Antifling:AddToggle("Method2Antifling", 
{
    Title = "Method 2 Antifling", 
    Description = "Different to the main method, Freezes you in place to avoid being flung or ragdolled. Doesn't avoid insta-kill gloves.",
    Default = false
    Callback = function(Value)
        method2 = Value
    end 
})
local Toggle = Tabs.Antifling:AddToggle("TPUP", 
{
    Title = "(METHOD 2 FEATURE) Teleport Up", 
    Description = "Teleports you up when you get hit, to avoid being spam hit.",
    Default = false
    Callback = function(Value)
        tpupav = Value
    end 
})
local Toggle = Tabs.Antifling:AddToggle("ExtraSafe", 
{
    Title = "(METHOD 2 FEATURE) Extra Safe++", 
    Description = "Anchors your rootpart for a small amount of time after you become unragdolled, to try and kill any momentum.",
    Default = false
    Callback = function(Value)
        extrasafe = Value
    end 
})
